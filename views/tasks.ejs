<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ListEasy</title>

    <!-- Add Bootstrap CSS file from a CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />

    <!-- Link stylesheets -->
    <link rel="stylesheet" href="/styles/css/custom.css" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />

    <%- include('partials/_header') %>

    <!-- Link scripts -->
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>

    <!-- Link fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto&family=Satisfy&display=swap"
      rel="stylesheet"
    />

    <!-- FontAwesome link to use icons -->
    <script
      src="https://kit.fontawesome.com/aa76f277e3.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <!-- Main HTML -->

    <!-- Form for adding a new task -->
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-4">
          <h2 class="text-center mb-3">Add Task</h2>
          <form method="POST" action="/tasks">
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                name="task_name"
                placeholder="Enter a new task"
                aria-label="Task"
                aria-describedby="task-button"
              />
              <div class="input-group-append">
                <button
                  class="btn btn-outline-secondary grey-custom"
                  type="submit"
                  id="task-button"
                >
                  <i class="fa-solid fa-plus"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Cards for displaying tasks -->
    <div class="container mt-5">
      <div class="card-deck" style="height: 22rem">
        <div class="card">
          <div class="card-header grey-custom">To Watch</div>
          <ul class="list-group list-group-flush">
            <% for (let task of tasks) { %>
            <% if (task.category === 'To watch') { %>
              <li class="list-group-item"><%= task.task_name %></li>
              <% }} %>
          </ul>
          <div class="card-footer mt-auto grey-custom">
            <small class="text">test</small>
          </div>
        </div>
        <div class="card">
          <div class="card-header grey-custom">To Read</div>
          <ul class="list-group list-group-flush">
            <% for (let task of tasks) { %>
              <% if (task.category === 'To read') { %>
                <li class="list-group-item"><%= task.task_name %></li>
                <% }} %>
          </ul>
          <div class="card-footer mt-auto grey-custom">
            <small class="text">test</small>
          </div>
        </div>
        <div class="card">
          <div class="card-header grey-custom">To Eat</div>
          <ul class="list-group list-group-flush">
            <% for (let task of tasks) { %>
              <% if (task.category === 'To eat') { %>
                <li class="list-group-item"><%= task.task_name %></li>
                <% }} %>
          </ul>
          <div class="card-footer mt-auto grey-custom">
            <small class="text">test</small>
          </div>
        </div>
        <div class="card">
          <div class="card-header grey-custom">To Buy</div>
          <ul class="list-group list-group-flush">
            <% for (let task of tasks) { %>
              <% if (task.category === 'To buy') { %>
                <li class="list-group-item"><%= task.task_name %></li>
                <% }} %>
          </ul>
          <div class="card-footer mt-auto grey-custom">
            <small class="text">test</small>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
